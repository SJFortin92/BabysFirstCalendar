@using BabysFirstCalendar.Controllers
@{
    ViewBag.Title = "Home Page";
}

<br />
<hr />

@*Displays note information when clicked upon, modal for the small box up on top of the page*@
<div id="noteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><span id="eventTitle"></span></h4>
            </div>
            <div class="modal-body">
                <p id="pDetails"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@*Scripts and declarations for the Memories Calendar*@

@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                events: function (start, end, timezone, callback) {
                    $.ajax({
                        type: "GET",
                        contentType: "application/json",
                        url: "Memory/GetMemories",
                        dataType: "JSON",
                        success: function (data) {
                            var memories = [];
                            $.each(data, function (i, data) {
                                memories.push(
                                    {
                                        title: data.Text,
                                        start: moment(data.Date).format("MM-DD-YYYY"),
                                        end: moment(data.Date).format("MM-DD-YYYY"),
                                        backgroundColor: 'yellow',
                                        id: data.NoteID
                                    });
                            });

                            callback(memories);
                        }
                    })
                }
            
             });
            calendar.render();
        });


    </script>
}

<div id="calendar"></div>




