<!DOCTYPE html>
<html>
@using BabysFirstCalendar.DatabaseBusinessLogic

<head>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Baby's First Calendar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <div class="container">
            <div style="float:left;">
                <div class="logo">
                    <a href="@Url.Action("Index","Home")">
                        <img src="../Logo.png" alt="Baby's First Calendar Logo" width="150" height="150" />
                    </a>
                Baby's First Calendar
                </div>
            </div>

            <div style="float:right;">
                Welcome, @LayoutProcessor.RetrieveName()!<br />
                @Html.ActionLink("My Account", "Edit", "Account", null, new { @class = "nav-links" })
                <span> | </span>
                @Html.ActionLink("Sign Out", "Logout", "Account", null, new { @class = "nav-links" })
            </div>
        </div>


    }
    else
    {
        <div class="container">
            <div style="float:left;">
                <div class="logo">
                    <a href="@Url.Action("Index","Home")">
                        <img src="../Logo.png" alt="Baby's First Calendar Logo" width="150" height="150" />
                    </a>
                    Baby's First Calendar
                </div>
            </div>
            <div style="float:right;">
                @Html.ActionLink("Register", "Signup", "Account", null, new { @class = "nav-links" })
                <span> | </span>
                @Html.ActionLink("Sign In", "Login", "Account", null, new { @class = "nav-links" })
            </div>
        </div>
    }
   
    @*<div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>*@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Baby's First Calendar</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
